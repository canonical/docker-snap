#!/bin/bash

set -eux

HOOK_LOG="${SNAP_COMMON}/hooks/${SNAP_REVISION}/$(basename "$0").log" && mkdir -p "${HOOK_LOG%/*}"
exec &> >(tee -a "${HOOK_LOG}")

# If the user unset the data-root, set it to the default
data_root="$(snapctl get data-root)"
if [ -z "$data_root" ]; then
  snapctl set data-root="${DEFAULT_DATA_ROOT}"
fi
